@model Quote
<h1 class="text-center">Welcome to Quoting Dojo!</h1>

<form asp-action="NewQuote" asp-controller="Quote" method="post">
  <div class="form-group">
      <label asp-for="Name"></label>
      <input asp-for="Name" class="form-control">
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
      <label asp-for="Content"></label>
      <textarea asp-for="Content" class="form-control"cols="30" rows="10"></textarea>
      <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add my quote!</button>
</form>

<form asp-action="Quotes" asp-controller="Quote" method="get">
  <button type="submit" class="btn btn-primary">Skip to quotes!</button>
</form>